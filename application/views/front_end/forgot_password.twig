{% extends "front_end/base.twig" %}

{% block head %}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-center form-account">
                <div class="box">
                    <div class="panel-form basic-form">
                        <h2>Lupa Password</h2>
                        <form action="{{ function('site_url','authentication/do_reset_password') }}" method="post" id="login">
                            <div class="form-group">
                                <input type="text" name="username" id="username" class="form-control" placeholder="Nama Pengguna" autocomplete="false">
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" id="password" class="form-control" placeholder="Kata sandi baru">
                            </div>
                            <div class="form-group">
                                <input type="password" name="confirm_password" id="confirm_password" class="form-control" placeholder="Ulang Kata sandi" required="" maxlength="15">
                            </div>
                            <button type="submit" class="btn btn-block btn-login btn-lg">Process</button><br>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}
    <script>
    $('#login').formValidation({
        framework: 'bootstrap',
        fields: {
            username: {
                validators: {
                    notEmpty: {
                        message: 'Username tidak boleh kosong'
                    }
                }
            },
            password: {
                validators: {
                    notEmpty: {
                        message: 'New Password tidak boleh kosong'
                    },
                    stringLength: {
                        min: 6,
                        max: 15,
                        message: 'Mew Password terlalu pendek'
                    }
                }
            },
            confirm_password: {
                validators: {
                    notEmpty: {
                        message: 'Ulang Password tidak boleh kosong'
                    },
                    identical: {
                        field: 'password',
                        message: 'Password tidak sesuai'
                    }
                }
            }
        }
    });
    </script>
{% endblock %}